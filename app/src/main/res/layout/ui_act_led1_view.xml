<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ui_act_led1_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="controleurarduino.projetens.cl.controleurarduino.ui.activities.Led1View"
    android:orientation="vertical"
    android:background="#b2dfdb"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="357dp"
        android:layout_height="207dp"
        android:weightSum="1"
        android:layout_weight="0.67">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="#80CBC4"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.47">

            <TextView
                android:layout_width="332dp"
                android:layout_height="45dp"
                android:text="@string/mat"
                android:textSize="24sp"
                tools:textStyle="bold"
                tools:gravity="top|center"
                android:textColor="#84715e" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mat1"
                    android:text="  Arduino UNO"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="35dp"
                    android:src="@drawable/arduino"

                    />

            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mat2"
                android:text="  Cable USB"
                android:textSize="18sp" />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:src="@drawable/usb"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mat3"
                    android:text="  Cable OTG"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="51dp"
                    android:src="@drawable/otg1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mat4"
                    android:text="  Un LED"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="42dp"
                    android:src="@drawable/led"
                    />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80CBC4"
            android:weightSum="1"
            android:orientation="vertical">
            <TextView
                android:text="@string/cab"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:id="@+id/textCab"
                tools:gravity="top|center"
                android:textColor="#84715e"
                android:textSize="24sp"
                tools:textStyle="bold"
                android:layout_weight="0.14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="121dp"
                android:elevation="1dp"
                android:src="@drawable/pin13"
                android:clickable="true"
                android:longClickable="true"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:weightSum="1"
        android:layout_weight="0.21">


        <Button
            android:text="@string/telecharger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="bottom|center"
            android:layout_weight="0.64"
            android:id="@+id/telecharger"
            android:background="#e5ad2b"
            android:textColor="@android:color/background_light"
             />
        <Button
            android:text="@string/all"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="bottom|center"
            android:id="@+id/allumer"
            android:background="#e27029"
            android:textColor="@android:color/background_light"
            android:layout_weight="0.21" />



    </LinearLayout>

</LinearLayout>
